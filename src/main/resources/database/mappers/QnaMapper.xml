<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.ware.group.qna.QnaDAO">

	<sql id="search">
		<where>
			<if test="kind == 'title'">
				TITLE LIKE CONCAT('%',#{search},'%')
			</if>
			<if test="kind == 'contents'">
				CONTENTS LIKE CONCAT('%', #{search},'%')
			</if>
			<if test="kind == 'writer'">
				WRITER LIKE CONCAT('%', #{search}, '%')
			</if>		
			
		</where>
	</sql>
	
	<select id="getTotalCount" parameterType="Pager" resultType="Long">
			SELECT COUNT(id) FROM QNA
			<include refid="search"></include>
	</select>
	
	
	<select id="getList" parameterType="Pager" resultType="QnaVO" >
		SELECT * FROM QNA 
		<include refid="search"></include>
		ORDER BY ID DESC,REF DESC, STEP ASC
		LIMIT #{startRow}, #{perPage}
	</select>
	
	<select id="getDetail" parameterType="QnaVO" resultMap="getDetailResult">
  		SELECT *
		FROM QNA
			 LEFT JOIN
			 QNAFILES 
			 USING(id) 
		WHERE ID = #{id}
  	</select>
  	
  	<resultMap type="QnaVO" id="getDetailResult">
		<id property="id" column="id"/>
		<result property="memberId" column="member_id"/>
		<result property="title" column="title"/>
		<result property="contents" column="contents"/>
		<result property="writer" column="writer"/>
		<result property="regDate" column="reg_date"/>
		<result property="hit" column="hit"/>
		<result property="ref" column="ref"/>
		<result property="step" column="step"/>
		<result property="depth" column="depth"/>
		
		<collection property="boardFileVOs" javaType="List" ofType="BoardFileVO">
			<id property="id" column="id"/>
			<result property="fileName" column="file_name"/>
			<result property="oriName" column="ori_name"/>
		</collection>
		
	</resultMap>
  	
	
	
	<insert id="setInsert" parameterType="QnaVO" useGeneratedKeys="true" keyProperty="id">
	 	<selectKey keyProperty="id" resultType="Long" order="BEFORE">
  			SELECT MAX(id)+1 FROM QNA
  		</selectKey>
		INSERT INTO QNA (id,member_id, title, contents, writer, reg_date, hit, ref, step, depth)
		VALUES(#{id}, #{memberId} ,#{title}, #{contents}, #{writer}, now(), 0,#{id} , 0, 0)
	</insert>
	
	<!-- <update id="setRefUpdate" parameterType="QnaVO">
	UPDATE QNA SET ref = #{id}
	WHERE id = #{id};
	</update> -->
	
	<delete id="setDelete" parameterType="QnaVO">
  		DELETE FROM QNA WHERE ID = #{id}
  	</delete>
  	
  	<insert id="setQnaFileAdd" parameterType="BoardFileVO">
  		INSERT INTO QNAFILES (id, qna_id, file_name, ori_name)
  		VALUES(#{id}, #{qnaId}, #{fileName}, #{oriName})
  	</insert>
  	
  	<select id="getFileDetail" parameterType="BoardFileVO" resultType="BoardFileVO">
  		SELECT * FROM QNAFILES WHERE ID = #{id}
  	</select> 
  	
  	<update id="setQnaHit" parameterType="QnaVO">
  		UPDATE QNA SET HIT = #{hit} + 1
		WHERE ID = #{id}
  	</update>
  	
  	<update id="setUpdate" parameterType="QnaVO">
  		UPDATE QNA SET TITLE = #{title}, WRITER = #{writer}, CONTENTS = #{contents}
  		WHERE ID = #{id}
  	</update>
  	
  	
  	<update id="setStepUpdate" parameterType="QnaVO">
  		UPDATE QNA SET STEP = STEP + 1
  		WHERE REF = #{ref} AND STEP > #{step}
  	</update>
  	
  	<insert id="setReplyAdd" parameterType="QnaVO">
  		INSERT INTO QNA (member_id, title, contents, writer, reg_date, hit, ref, step, depth)
		VALUES( #{memberId} ,#{title}, #{contents}, #{writer}, now(), 0,#{ref} , #{step}, #{depth})
  	</insert>
</mapper>